# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/smart_village_db"

# Database Migration Control
# When DATABASE_URL is set, migrations will run automatically on startup
# Set SKIP_MIGRATIONS=true to disable auto-migration
# SKIP_MIGRATIONS="false"

# MQTT Broker Configuration (for IoT device simulation)
MQTT_BROKER_URL="mqtt://localhost:1883"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="change-this-to-a-random-secret-min-32-chars"

# Admin Configuration (Optional)
# Set custom default password for admin user (default is "Admin@123")
# ADMIN_DEFAULT_PASSWORD="YourSecurePassword123"

# Payment Providers (Sandbox/Development)
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_SECRET_KEY="sk_test_..."
RAZORPAY_KEY_ID="rzp_test_..."
RAZORPAY_SECRET="your-razorpay-secret"

# Web3 Configuration (Optional)
WEB3_PROVIDER_URL="https://polygon-mumbai.g.alchemy.com/v2/your-api-key"
PRIVATE_KEY="your-private-key" # For smart contract interactions

# File Storage
CLOUDINARY_URL="cloudinary://api_key:api_secret@cloud_name"

# Monitoring & Analytics
SENTRY_DSN="your-sentry-dsn"
GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"

# Feature Flags
ENABLE_WEB3="false"
ENABLE_BLOCKCHAIN_LOGGING="false"
ENABLE_DRONE_SIMULATION="false"