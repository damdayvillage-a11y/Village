  accentColor     String   @default("#f59e0b") // amber-500
  
  // Meta
  active          Boolean  @default(true)
  version         Int      @default(1)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  publishedAt     DateTime?
  createdBy       String?
  updatedBy       String?
  
  @@map("homepage_config")
